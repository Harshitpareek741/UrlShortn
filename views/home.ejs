<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage</title>
    <link rel="stylesheet" href="home.css">
</head>
<body>
    <%- include('./navbar.ejs') %>
    
    <main id="main" class="flexbox-col">
        <h2 class=".head">UrlShorten - Short Your Url</h2>
        <br>
        <%- include('./searchbar.ejs') %>
        <br>
        <textarea id="readonly-textarea" readonly><%=fullUrl%></textarea>
        <button id="copy-button">Copy Text</button>
        <% allurls.forEach(data => { %>
            <div class="url-info">
                <p class="short-id">Short id: <%= data.shortId %></p>
                <p>Redirect to: <%= data.redirectUrl %></p>
                <p>Views: <%= data.visitHistory %></p>
            </div>
        <% }); %>
        
      </main>
      <script src="home.js"></script>
</body>
</html>